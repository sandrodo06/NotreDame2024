<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/dark_gray" /> <!-- Background when selected -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/white" /> <!-- Default background -->
            <corners android:radius="16dp" />
            <stroke
                android:width="3dp"
                android:color="@color/dark_gray" /> <!-- Border when selected -->
        </shape>
    </item>
</selector>
